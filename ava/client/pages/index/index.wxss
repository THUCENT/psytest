page {
  background-color: #FFFFE0;
}
@font-face {
font-family: Chalkboard;
src: url('/assets/font/chalkboard.ttf'),
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box
}

.introduction {
  margin-top: 50rpx;
  font-family: Yuanti TC;
  font-size: 30rpx;
  color: #585858;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 38rpx;
  font-weight: bold;
  font-style:initial;
  margin-top: 30rpx;
}

.start {
  margin-top: 100rpx;
}

.text {
  font-size: 40rpx;
  padding: 30rpx 40rpx;
  border: 1px solid #405f80;
  border-radius: 20rpx;
}
